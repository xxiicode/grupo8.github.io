<div class="container">
    <main class="main-shop">
        <section class="buscador">
            <form action="">
                <div class="search">
                    <label for="buscar">buscar</label><br>
                    <input type="text" id="buscar" name="buscar" placeholder="item o categoría">
                </div>
                <div class="order">
                    <label for="ordenar">ordenar por</label><br>
                    <select name="ordenar" id="ordenar">
                        <option value="">Mayor a menor</option>
                        <option value="0">$0</option>
                        <option value="1799">$1799.99</option>
                    </select>
                </div>
                <div class="precios">
                    <h3>precio<h3>
                            <label for="min">min</label>
                            <input type="number" id="min" name="min" placeholder="0">
                            <label for="max"> - max</label>
                            <input type="number" id="max" name="max" placeholder="0">
                </div>
                <div class="elegir">
                    <h3>filtrar</h3>
                    <input type="checkbox" id="nuevos" name="nuevos">
                    <label for="nuevos">nuevos</label><br>
                    <input type="checkbox" id="ofertas" name="ofertas">
                    <label for="ofertas">ofertas</label> <br>
                    <input type="checkbox" id="especial" name="especial">
                    <label for="especial">edicion especial</label><br>
                    <input type="checkbox" id="favoritos" name="favoritos">
                    <label for="favoritos">favoritos</label> <br>
                </div>
            </form>
        </section>

        <div class="cards">
            <section>
                <div class="item">

                    <article class="card-item" id="articulo">
                        <span class="nuevo">nuevo</span>
                        <a href="shop/item/22">
                            <picture class="card-item-cover">
                                <img class="img-front" src="../assets/img/star-wars/trooper-1.webp"
                                    alt="Figura Funko de Star Wars: Stormtrooper">
                                <img class="img-back" src="../assets/img/star-wars/trooper-box.webp"
                                    alt="Figura Funko de Star Wars: Stormtrooper en Caja">
                            </picture>
                            <div class="item-content">
                                <p class="licencia">star wars</p>
                                <h4 class="nombre">stormtrooper lightsaber</h4>
                                <p class="precio">$ 1799,99</p>
                                <p class="promo">3 cuotas sin interés</p>
                            </div>
                        </a>
                    </article>

                    

                </div>

            </section>

            <div class="center-btn">

                <div class="listado-pag">
                    <a href="/pages/"><svg width="15" height="15" viewBox="0 0 34 34" fill="none"
                            xmlns="http://www.w3.org/2000/svg">
